<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_background"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/left_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/light_red_2020" />

    <ImageView
        android:id="@+id/poison_left_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/poison_red"
        android:visibility="invisible"
        android:layout_toRightOf="@id/left_life"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/left_poison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/poison_left_icon"
        android:visibility="invisible"
        android:textColor="@color/light_red_2020"/>

    <ImageView
        android:id="@+id/energy_left_icon"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/energy_icon_left"
        android:visibility="invisible"
        android:layout_toRightOf="@id/left_poison"
        android:paddingLeft="2dp"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/energy_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/energy_left_icon"
        android:visibility="invisible"
        android:textColor="@color/light_red_2020"/>

    <ImageView
        android:id="@+id/divider_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/circle"/>

    <TextView
        android:id="@+id/right_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/light_blue_2020"/>

    <TextView
        android:id="@+id/right_poison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/right_life"
        android:paddingRight="10dp"
        android:visibility="invisible"
        android:textColor="@color/light_blue_2020"/>

    <ImageView
        android:id="@+id/poison_right_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/poison_blue"
        android:visibility="invisible"
        android:layout_toLeftOf="@id/right_poison"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/energy_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/poison_right_icon"
        android:paddingRight="10dp"
        android:visibility="invisible"
        android:textColor="@color/light_blue_2020"/>

    <ImageView
        android:id="@+id/energy_right_icon"
        android:layout_toLeftOf="@id/energy_right"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/energy_icon_right"
        android:visibility="invisible"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/divider_pipe_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:src="@drawable/pipe"/>

    <ImageView
        android:id="@+id/divider_pipe_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:src="@drawable/pipe"/>

</RelativeLayout>

</layout>