<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.minu.lifecount2020.app.MainActivity">

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:splitMotionEvents="false">

            <RelativeLayout
                android:id="@+id/left_update"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginStart="-70dp"
                android:layout_marginLeft="-70dp">

                <ImageView
                    android:id="@+id/update_arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/update"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/left_arrow"
                    app:tint="@color/text_light_grey" />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:rotation="270"
                    android:text="Pull to Restart Duel"
                    android:textColor="@color/text_light_grey" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/first_life_picker_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    style="@style/Picker.Big"
                    android:id="@+id/life_picker_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_poison_picker_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poison_symbol_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:src="@drawable/poison_red" />

                <TextView
                    style="@style/Picker.Small"
                    android:id="@+id/poison_picker_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/first_energy_picker_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/energy_icon_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:src="@drawable/energy_icon_left" />

                <TextView
                    style="@style/Picker.Small"
                    android:id="@+id/energy_picker_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_life_picker_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <TextView
                    style="@style/Picker.Big"
                    android:id="@+id/life_picker_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".5"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_poison_picker_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/poison_symbol_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:src="@drawable/poison_blue" />

                <TextView
                    style="@style/Picker.Small"
                    android:id="@+id/poison_picker_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_energy_picker_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/energy_icon_two"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:src="@drawable/energy_icon_right" />

                <TextView
                    style="@style/Picker.Small"
                    android:id="@+id/energy_picker_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/right_update"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginEnd="-70dp"
                android:layout_marginRight="-70dp">

                <ImageView
                    android:id="@+id/update_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/update_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/right_arrow"
                    app:tint="@color/text_light_grey" />

                <TextView
                    android:id="@+id/update_2"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:rotation="90"
                    android:text="Pull to Restart Duel"
                    android:textColor="@color/text_light_grey" />

            </RelativeLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignLeft="@id/wrapper"
            android:layout_alignTop="@id/wrapper"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/settings_icon" />

        <TextView
            android:id="@+id/round_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_light_grey"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignTop="@id/wrapper"
            android:layout_alignEnd="@id/wrapper"
            android:layout_alignRight="@id/wrapper"
            android:layout_marginRight="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/history_fill0_wght400_grad0_opsz24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_above="@id/settings_footer"
            android:background="@color/drawer_background"
            android:choiceMode="singleChoice"
            android:divider="@color/drawer_background"
            android:dividerHeight="0dp"
            android:paddingBottom="20dp"
            android:clipToPadding="false"/>

        <View
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="@drawable/gradient_bottom_up"
            android:layout_above="@id/settings_footer"/>

        <include
            android:id="@+id/settings_footer"
            layout="@layout/settings_footer" />

    </RelativeLayout>

    <ListView
        android:id="@+id/right_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/drawer_background"
        android:choiceMode="singleChoice"
        android:divider="@color/drawer_background"
        android:dividerHeight="0dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideInset"
        android:padding="15dp" />

</androidx.drawerlayout.widget.DrawerLayout>

</layout>